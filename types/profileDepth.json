{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "types/profileDepth",
    "type": "object",
    "properties": {
        "lower": {
            "$ref": "#/$defs/distanceMeasureType",
            "description": "The lower bound"
        },
        "upper": {
            "$ref": "#/$defs/distanceMeasureType",
            "description": "The upper bound"
        },
        "unit": {
            "$ref": "#/$defs/distanceMeasureType"
        }
    },
    "$defs": {
        "distanceMeasureType": {
            "description": "Specifies a distance, including units (default is centimetre).",
            "type": "object",
            "required": [],
            "properties": {
                "measurement": {
                    "type": "number",
                    "description": "The distance measurement"
                },
                "unit": {
                    "$ref": "../enums/uncefactDistanceUnitsType.json",
                    "nullable": true,
                    "default": "CMT",
                    "description": "Defines the unit of measure for the depth. Prefered units are MTK (UN-CEFACT for square metre)."
                }
            }
        }
    }
}