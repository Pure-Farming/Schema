{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "/types/deviceType",
    "description": "Defines a device.",
    "type": "object",
    "required": [
        "id"
    ],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier on location level in the source system for this device."
        },
        "serial": {
            "type": "string",
            "description": "The serial number of the device."
        },
        "name": {
            "type": "string",
            "description": "The name of the device."
        },
        "description": {
            "type": "string",
            "description": "Description of the device."
        },
        "softwareVersion": {
            "type": "string",
            "description": "Version of the software installed on the device."
        },
        "hardwareVersion": {
            "type": "string",
            "description": "Version of the hardware installed in the device."
        },
        "manufacturer": {
            "type": "string",
            "description": "Unique id of the manufacturer using DNS notation. For example lely.com."
        },
        "deviceCategory": {
            "type": "string",
            "description": "The category of device."
        }
    },
    "examples": [
        {
            "id": "LAU6",
            "serial": "LAU-6-A3476",
            "name": "LAU6 Flow Monitor",
            "description": "LAU6 smart farm irrigation monitoring integrated system",
            "softwareVersion": "2.0.5",
            "hardwareVersion": "8.1",
            "manufacturer": "Farmsmart Irrigation Ltd",
            "deviceCategory": "PulseMeter"
        }
    ]
}